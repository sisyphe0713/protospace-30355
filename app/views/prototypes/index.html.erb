<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
    <%# ログインしているときは以下を表示する %>
      <div class="greeting">
        こんにちは、
        <% if @prototypes.ids.empty? %>
          <%= link_to "#{current_user.name}さん", root_path, class: :greeting__link %>
          <%# <%= link_to "#{current_user.name}さん" , prototype_user_path(@prototypes.ids, current_user.id), class: :greeting__link %>
        <% else %>
          <%= link_to "#{current_user.name}さん", prototype_user_path(@prototypes.ids, current_user.id), class: :greeting__link %>
        <% end %>
      </div>
    <%# // ログインしているときは上記を表示する %>
    <% end %>
    <div class="card__wrapper">
      <%# 投稿機能実装後、部分テンプレートでプロトタイプ投稿一覧を表示する %>
      <%= render partial: "prototype", collection: @prototypes %>
    </div>
  </div>
</main>
